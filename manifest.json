{
  "manifest_version": 3,
  "name": "Form15 Tax Filer",
  "version": "1.0",
  "description": "Automatically fill tax forms with Excel data",
  "icons": {
    "128": "icon-128.png"
  },
  "action": {
    "default_icon": "icon-128.png"
  },
  "side_panel": {
    "default_path": "auth.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
